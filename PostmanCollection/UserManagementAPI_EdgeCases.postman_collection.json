									"pm.test(\"Email is normalized to lowercase\", function () {",
									"    const user = pm.response.json();",
									"    pm.expect(user.email).to.equal('mixedcase@example.com');",
									"    pm.environment.set('caseUserId', user.id);",
									"});"
								],
