		{
			"name": "Bug Fix Verification Tests",
			"item": [
				{
					"name": "Test Whitespace Trimming on Create",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201 Created\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Whitespace is trimmed from fields\", function () {",
									"    const user = pm.response.json();",
									"    pm.expect(user.firstName).to.equal('Trimmed');",
									"    pm.expect(user.lastName).to.equal('User');",
									"    pm.expect(user.email).to.not.include(' ');",
									"    pm.environment.set('trimmedUserId', user.id);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"  Trimmed  \",\n  \"lastName\": \"  User  \",\n  \"email\": \"  trimmed@example.com  \",\n  \"phoneNumber\": \"  123-456-7890  \"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/user",
							"host": ["{{baseUrl}}"],
							"path": ["api", "user"]
						}
					}
				},
				{
