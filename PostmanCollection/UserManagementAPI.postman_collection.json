		{
			"name": "4. POST Create New User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"User was created with ID\", function () {",
							"    const user = pm.response.json();",
							"    pm.expect(user).to.have.property('id');",
							"    pm.environment.set('createdUserId', user.id);",
							"});",
							"",
							"pm.test(\"Created user has correct data\", function () {",
							"    const user = pm.response.json();",
							"    pm.expect(user.firstName).to.equal('Alice');",
							"    pm.expect(user.lastName).to.equal('Johnson');",
							"    pm.expect(user.email).to.equal('alice.johnson@example.com');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Johnson\",\n  \"email\": \"alice.johnson@example.com\",\n  \"phoneNumber\": \"555-123-4567\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/user",
					"host": ["{{baseUrl}}"],
					"path": ["api", "user"]
				},
				"description": "Creates a new user in the system"
			},
			"response": []
		},
